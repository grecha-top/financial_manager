<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Создать счёт - Financial Manager</title>
    <link rel="stylesheet" href="https://unpkg.com/sakura.css/css/sakura.css" />
</head>
<body>
    <h1>Создать счёт</h1>
    <form id="accountForm">
        <label>Название счёта
            <input type="text" name="account_name" required />
        </label>
        <label>Тип счёта
            <select name="account_type" required>
                <option value="cash">Наличные</option>
                <option value="card">Карта</option>
                <option value="deposit">Депозит</option>
            </select>
        </label>
        <label>Начальный баланс
            <input type="number" name="balance" step="0.01" min="0" value="0" placeholder="0.00" />
        </label>
        <button type="submit">Создать</button>
    </form>
    <p id="result"></p>

    <h2>Список счетов</h2>
    <div id="accountsContainer">
        <p id="loadingMessage">Загрузка...</p>
        <div id="emptyMessage" style="display: none;">
            <p style="color: #666; font-style: italic;">Пока не было добавлено ни одного счёта</p>
        </div>
        <table id="accountsTable" style="display: none; width: 100%; border-collapse: collapse; margin-top: 1em;">
            <thead>
                <tr style="background-color: #f0f0f0;">
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">ID</th>
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">Название</th>
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">Тип</th>
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">Баланс</th>
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">Дата создания</th>
                    <th style="padding: 0.5em; text-align: left; border-bottom: 2px solid #ddd;">Действия</th>
                </tr>
            </thead>
            <tbody id="accountsTableBody">
            </tbody>
        </table>
    </div>

    <script>
        const token = localStorage.getItem('authToken');
        if (!token) {
            window.location.href = '/auth/login';
        }

        const accountTypeNames = {
            'cash': 'Наличные',
            'card': 'Карта',
            'deposit': 'Депозит'
        };

        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleString('ru-RU', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        async function loadAccounts() {
            const loadingMsg = document.getElementById('loadingMessage');
            const emptyMsg = document.getElementById('emptyMessage');
            const table = document.getElementById('accountsTable');
            const tbody = document.getElementById('accountsTableBody');
            
            try {
                const resp = await fetch('/accounts', {
                    headers: {
                        'Authorization': 'Bearer ' + token
                    }
                });
                if (!resp.ok) {
                    loadingMsg.textContent = 'Ошибка загрузки счетов';
                    return;
                }
                const data = await resp.json();
                loadingMsg.style.display = 'none';
                
                if (!data || data.length === 0) {
                    emptyMsg.style.display = 'block';
                    table.style.display = 'none';
                } else {
                    emptyMsg.style.display = 'none';
                    table.style.display = 'table';
                    tbody.innerHTML = '';
                    data.forEach(acc => {
                        const row = document.createElement('tr');
                        row.id = `account-row-${acc.id}`;
                        row.style.borderBottom = '1px solid #eee';
                        const typeName = accountTypeNames[acc.account_type] || acc.account_type;
                        const balance = parseFloat(acc.balance || 0);
                        const balanceColor = balance >= 0 ? '#28a745' : '#dc3545';
                        row.innerHTML = `
                            <td style="padding: 0.5em;">${acc.id}</td>
                            <td style="padding: 0.5em;">
                                <span class="account-name-${acc.id}">${escapeHtml(acc.account_name)}</span>
                                <input type="text" class="edit-name-${acc.id}" value="${escapeHtml(acc.account_name)}" style="display: none; width: 100%;" />
                            </td>
                            <td style="padding: 0.5em;">
                                <span class="account-type-${acc.id}">${typeName}</span>
                                <select class="edit-type-${acc.id}" style="display: none;">
                                    <option value="cash" ${acc.account_type === 'cash' ? 'selected' : ''}>Наличные</option>
                                    <option value="card" ${acc.account_type === 'card' ? 'selected' : ''}>Карта</option>
                                    <option value="deposit" ${acc.account_type === 'deposit' ? 'selected' : ''}>Депозит</option>
                                </select>
                            </td>
                            <td style="padding: 0.5em;">
                                <span class="account-balance-${acc.id}" style="color: ${balanceColor}; font-weight: bold;">${balance.toFixed(2)} ₽</span>
                                <input type="number" class="edit-balance-${acc.id}" value="${balance.toFixed(2)}" step="0.01" min="0" style="display: none; width: 100%;" />
                            </td>
                            <td style="padding: 0.5em;">${formatDate(acc.created_at)}</td>
                            <td style="padding: 0.5em;">
                                <button class="edit-btn-${acc.id}" onclick="startEdit(${acc.id})" style="margin-right: 0.5em;">Редактировать</button>
                                <button class="save-btn-${acc.id}" onclick="saveAccount(${acc.id})" style="display: none; margin-right: 0.5em;">Сохранить</button>
                                <button class="cancel-btn-${acc.id}" onclick="cancelEdit(${acc.id})" style="display: none;">Отмена</button>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                }
            } catch {
                loadingMsg.textContent = 'Ошибка сети';
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        document.getElementById('accountForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const form = e.target;
            const body = {
                account_name: form.account_name.value,
                account_type: form.account_type.value,
                balance: form.balance.value || "0"
            };
            try {
                const resp = await fetch('/accounts', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify(body)
                });
                const text = await resp.text();
                if (resp.ok) {
                    document.getElementById('result').textContent = 'Счёт создан';
                    document.getElementById('result').style.color = 'green';
                    form.reset();
                    form.balance.value = "0";
                    loadAccounts();
                } else {
                    document.getElementById('result').textContent = 'Ошибка: ' + text;
                    document.getElementById('result').style.color = 'red';
                }
            } catch {
                document.getElementById('result').textContent = 'Ошибка сети';
                document.getElementById('result').style.color = 'red';
            }
        });

        function startEdit(accountId) {
            document.querySelector(`.account-name-${accountId}`).style.display = 'none';
            document.querySelector(`.edit-name-${accountId}`).style.display = 'inline-block';
            document.querySelector(`.account-type-${accountId}`).style.display = 'none';
            document.querySelector(`.edit-type-${accountId}`).style.display = 'inline-block';
            document.querySelector(`.account-balance-${accountId}`).style.display = 'none';
            document.querySelector(`.edit-balance-${accountId}`).style.display = 'inline-block';
            document.querySelector(`.edit-btn-${accountId}`).style.display = 'none';
            document.querySelector(`.save-btn-${accountId}`).style.display = 'inline-block';
            document.querySelector(`.cancel-btn-${accountId}`).style.display = 'inline-block';
        }

        function cancelEdit(accountId) {
            document.querySelector(`.account-name-${accountId}`).style.display = 'inline';
            document.querySelector(`.edit-name-${accountId}`).style.display = 'none';
            document.querySelector(`.account-type-${accountId}`).style.display = 'inline';
            document.querySelector(`.edit-type-${accountId}`).style.display = 'none';
            document.querySelector(`.account-balance-${accountId}`).style.display = 'inline';
            document.querySelector(`.edit-balance-${accountId}`).style.display = 'none';
            document.querySelector(`.edit-btn-${accountId}`).style.display = 'inline-block';
            document.querySelector(`.save-btn-${accountId}`).style.display = 'none';
            document.querySelector(`.cancel-btn-${accountId}`).style.display = 'none';
            // Восстанавливаем значения
            const row = document.getElementById(`account-row-${accountId}`);
            const nameSpan = row.querySelector(`.account-name-${accountId}`);
            const typeSpan = row.querySelector(`.account-type-${accountId}`);
            const balanceSpan = row.querySelector(`.account-balance-${accountId}`);
            document.querySelector(`.edit-name-${accountId}`).value = nameSpan.textContent;
            const typeText = typeSpan.textContent.trim();
            const typeValue = typeText === 'Наличные' ? 'cash' : (typeText === 'Карта' ? 'card' : 'deposit');
            document.querySelector(`.edit-type-${accountId}`).value = typeValue;
            const balanceText = balanceSpan.textContent.replace(' ₽', '').trim();
            document.querySelector(`.edit-balance-${accountId}`).value = balanceText;
        }

        async function saveAccount(accountId) {
            const newName = document.querySelector(`.edit-name-${accountId}`).value;
            const newType = document.querySelector(`.edit-type-${accountId}`).value;
            const newBalance = document.querySelector(`.edit-balance-${accountId}`).value;
            
            if (!newName || !newName.trim()) {
                alert('Название счёта не может быть пустым');
                return;
            }
            
            if (parseFloat(newBalance) < 0) {
                alert('Баланс не может быть отрицательным');
                return;
            }
            
            try {
                const resp = await fetch(`/accounts/${accountId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        account_name: newName,
                        account_type: newType,
                        balance: newBalance
                    })
                });
                const text = await resp.text();
                if (resp.ok) {
                    loadAccounts();
                } else {
                    alert('Ошибка при сохранении: ' + text);
                }
            } catch {
                alert('Ошибка сети');
            }
        }

        // Загружаем счета при загрузке страницы
        loadAccounts();
    </script>
</body>
</html>


